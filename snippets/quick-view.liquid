{% comment %}Quick View{% endcomment %}

 {% capture img_id %}ProductCardImage-{{ section.id }}-{{ product_card_product.id }}{% endcapture %}
  {% capture wrapper_id %}ProductCardImageWrapper-{{ section.id }}-{{ product_card_product.id }}{% endcapture %}
  {%- assign img_url = product_card_product.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {%- assign product_form_id = 'product-form-' | append: section.id -%}
<div id="fancybox-product-{{ product_card_product.id }}" class="fancybox-product" style="display: none;">
      <div class="fancybox-product__content">
        <div class="fancybox-product__image">
          <img id="{{ img_id }}"
            class="grid-view-item__image"
            alt="{{ product_card_product.featured_image.alt }}"
            src="{{ product_card_product.featured_image | img_url: 'x600' }}"
            data-src="{{ img_url }}"
            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
            data-aspectratio="{{ product_card_product.featured_image.aspect_ratio }}"
            data-sizes="auto"
            data-image>
        </div>
        <div class="fancybox-product__details">
          <h1 class="fancybox-product__title">{{ product_card_product.title }}</h1>
          <div class="product__price">
            {%- render 'price', product: product_card_product, use_variant: true, show_badges: true, price_class: 'price--large' -%}
          </div>
          {% form 'product', product, class:form_classes, novalidate: 'novalidate', data-product-form: '' %}
            {%- assign current_variant = product_card_product.selected_or_first_available_variant -%}
          
          <label class="{% if product_card_product.has_only_default_variant %}no-js{% endif %}" for="Variant-{{ section.id }}">Variations</label>
             <select name="id" id="ProductSelect-{{ section.id }}" class="product-form__variants {% if product_card_product.has_only_default_variant %}no-js{% endif %}">
               {% for variant in product_card_product.variants %}
                {% if variant.available %}
               		<option {% if variant == product_card_product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                          {{ variant.title }}
                   </option>
				{% endif %}
              {% endfor %}
              </select> 	
          
            <div class="product-form__item product-form__item--quantity">
              <label for="Quantity-{{ section.id }}">{{ 'products.product.quantity' | t }}</label>
              <input type="number" id="Quantity-{{ section.id }}" name="quantity" value="1" min="1" class="product-form__input" pattern="[0-9]*" data-quantity-input>
            </div>

            <div class="product-form__error-message-wrapper product-form__error-message-wrapper--hidden" data-error-message-wrapper role="alert">
              {% include 'icon-error' %} <span class="product-form__error-message" data-error-message>{{ 'products.product.quantity_minimum_message' | t }}</span>
            </div>

            <div class="product-form__item product-form__item--submit{% if section.settings.enable_payment_button %} product-form__item--payment-button{% endif %}{% if product_card_product.has_only_default_variant %} product-form__item--no-variants{% endif %}">
              <button type="submit" name="add"
                {% unless current_variant.available %} aria-disabled="true"{% endunless %}
                aria-label="{% unless current_variant.available %}{{ 'products.product.sold_out' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endunless %}"
                class="btn product-form__cart-submit{% if section.settings.enable_payment_button %} btn--secondary-accent{% endif %}"
                data-add-to-cart>
                <span data-add-to-cart-text>
                  {% unless current_variant.available %}
                    {{ 'products.product.sold_out' | t }}
                  {% else %}
                    {{ 'products.product.add_to_cart' | t }}
                  {% endunless %}
                </span>
                <span class="hide" data-loader>
                  {% include 'icon-spinner' %}
                </span>
              </button>
              {% if section.settings.enable_payment_button %}
                {{ form | payment_button }}
              {% endif %}
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  	<script>
      jQuery(document).ready(function(){
       jQuery("a.btn.quick-view").click(function(){
          jQuery("body.template-product").css("overflow","hidden"); 
          jQuery("#shopify-section-header").css("z-index","9");  
        });
        jQuery("button.fancybox-button.fancybox-close-small").click(function(){
          jQuery("body.template-product").css("overflow","auto"); 
          jQuery("#shopify-section-header").css("z-index","99999999"); 
        });
      });
  	</script>