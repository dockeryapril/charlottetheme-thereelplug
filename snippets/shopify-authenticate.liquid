{% if settings.email_authentication != blank %}
	{% assign email = settings.email_authentication | base64_encode %}
	{% assign shop_url = shop.url | base64_encode %}
{% else %}
	{% assign email = "user_email@placeholder.com" | base64_encode %}
	{% assign shop_url = shop.url | base64_encode %}
{% endif %}

<script>
  $(document).ready(function(){
    $.ajax({url: "https://team.dropshiplifestyle.com/shopify-authenticate/search-contact-result.php?store_url={{ shop_url }}&email={{ email }}&theme_version={{ theme.name }}&encrypted=true", success: function(result){
      if($(result).filter("#success").val() == "1") {
        //alert("You are a user");
        $(result).filter("script").insertAfter("#shopify-authenticate");
      }   
      else {
        $(result).filter("script").insertAfter("#shopify-authenticate");    
        $("#Purchase-popup ").css("display","none");   
        $("#exit-popup ").css("display","none");       
        {% if request.design_mode %}
           $("#shopify-authenticate-error").show();
           $("body").css("overflow","hidden");
        {% else %}
             alert("This is a non-authenticated copy of the theme. Please buy the licensed copy."); 
             $("#shopify-authenticate-error").show();
             $("body").css("overflow","hidden");
        {%- endif -%}
      }
    }});
});
</script>